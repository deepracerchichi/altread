{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    
    // These let you be more flexible without losing all type safety
    "noImplicitAny": false,
    "strictNullChecks": false
  }
}
